<h1>Portfolio</h1>
<div class="row">
  <div class="col-md-7">
    <%=  image_tag @portfolio_item.main_image %>
  </div>
  <div class="col-md-5">
  <h2><%= @portfolio_item.title %></h2>
    <em><%= @portfolio_item.subtitle %></em>
    <p><%= @portfolio_item.body %></p>

    <h2>Technologies Used:</h2>
    <% @portfolio_item.technologies.each do |technology| %>
      <p><%= technology.name %></p>
    <% end %>
  </div>
</div>